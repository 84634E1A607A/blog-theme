// ==============================
// Variable
// ==============================

// ======== Space ========
line-height = 1.75
yard = 8px
max-width = 900px

// ======== Font ========
font-weight = 400

// Normal Font
$normal-fonts = "WesternQuotes", "Helvetica Neue", "PingFang SC", "Microsoft YaHei", Arial, sans-serif
$header-fonts = 'Allura', cursive, serif

// Article Font
$article-fonts = {
  default: 'Optima'\, 'PingFang SC'\, 'Roboto'\, 'Noto SansCJK'\, 'Helvetica Neue'\, 'Helvetica'\, "Microsoft YaHei"\, "YaHei-Consolas-Hybrid"\, sans-serif
  YaHei: STHeiti\, 'Microsoft YaHei'\, "微软雅黑"\, serif
  Hel: 'Helvetica'\, 'Hiragino Sans GB'\, 'Roboto'\, 'Noto SansCJK'\, 'Heiti TC'\, 'Heiti SC'\, sans-serif
  Simsun: 'Times New Roman'\, 'Simsun'\, 'STSong'\, '华文宋体'\, sans-serif
}
$fonts-style = hexo-config('fonts-style')
if $fonts-style in $article-fonts
  $article-fonts = $article-fonts[$fonts-style]
  if $fonts-style == 'Custom'
    $article-fonts = $custom-article-font
else
  $article-fonts = $article-fonts['default']

// Code Font
$code-fonts = jetbrains-mono, monospace, Consolas, Monaco, Menlo, 'Microsoft YaHei', sans-serif
if hexo-config('code-style') == 'Custom'
  $code-fonts = $custom-code-font

$heading-list = {
  h1: 1.75em
  h2: 1.5em
  h3: 1.25em
  h4: 1em
  h5: 0.875em
  h6: 0.75em
}

// ======== Color ========

// Code highlight
$color-code-background = #f7f7f7
$color-code-plain = #2c2c2c
$color-code-line = #bbb
$color-code-keyword = #c678dd
$color-code-builtIn = #e6c07b
$color-code-string = #98c379
$color-code-params = #5799de
$color-code-number = #d19a66
$color-code-title = #e06c75
$color-code-comment = #a1a4aa
$color-code-attribute = #61aeee
$color-code-symbol = #cb4b16

$color-code-background-dark = #202020
$color-code-plain-dark = #e0e0e0
$color-code-line-dark = #444
$color-code-keyword-dark = #c678dd
$color-code-builtIn-dark = #e6c07b
$color-code-string-dark = #98c379
$color-code-params-dark = #5799de
$color-code-number-dark = #d19a66
$color-code-title-dark = #e06c75
$color-code-comment-dark = #a1a4aa
$color-code-attribute-dark = #61aeee
$color-code-symbol-dark = #cb4b16

// ======== Global ========
$global-setting = {
  font-size: 16px,
  background: #fff,
  color: #383838
}

$global-setting-dark = {
  font-size: 16px,
  background: #101010,
  color: #f0f0f0
}

// ======== Theme ========
$theme-text-color-main = #383838
$theme-text-color-sub = #666
$theme-text-color-desc = #999
$theme-text-color-comment = #c0c0c0

$theme-line-color = #f0f0f0

$theme-color-main = #c3829e
$theme-color-hint = #5c2c41
$theme-color-content-background = mix($theme-color-main, #fff, 3%)
$theme-color-hover = mix($theme-color-main, #fff, 75%)
$theme-color-link = mix($theme-color-main, #383838, 75%)

$theme-text-color-main-dark = #f0f0f0
$theme-text-color-sub-dark = #ddd
$theme-text-color-desc-dark = #bbb
$theme-text-color-comment-dark = #666

$theme-line-color-dark = #101010

$theme-color-main-dark =#feb0d1
$theme-color-hint-dark = #fed7e7
$theme-color-content-background-dark = mix($theme-color-main-dark, #000, 3%)
$theme-color-hover-dark = mix($theme-color-main-dark, #000, 75%)
$theme-color-link-dark = mix($theme-color-main-dark, #ddd, 75%)
