body
  background-color: $theme-color-content-background
  &.under
    overflow-y: hidden

.container
  position: relative
  .container-inner
    width: 100%
    padding-top: 100px
    transition-sign()
    padding-left: yard
    padding-right: 200px
    +tablet()
      padding: 0
      padding-right: 0
      padding-left: 0
    +mobile()
      margin-top: 72px
    &.under
      border-radius: 12px
      transform: scale(0.95)
      transform-origin: top
      filter: blur(16px)

.main
  max-width: max-width
  margin: 0 auto
  +tablet()
    width: 100%
    max-width: 100%
    padding: 0 (yard*2)
