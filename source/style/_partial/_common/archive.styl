.archive
  margin-top: 1em
  .archive-list
    max-width 100%
  .archive-title
    font-size: 32px
    margin: yard
    display: inline
  .archive-year
    display: block
    font-size: 28px
    margin: (yard*3) yard
    font-weight bolder
    +theme_light()
      color: $theme-color-main
    +theme_dark()
      color: $theme-color-main-dark
  .archive-post
    max-width 100%
    height: 260px
    max-height: 260px
    overflow: hidden
    padding: (yard*2)
    position: relative
    +theme_light()
      border: 1px solid #f0f0f0;
      box-shadow: 0px 2px 12px 0 mix($theme-color-main, #fff, 12%);
    +theme_dark()
      border: 1px solid #101010;
      box-shadow: 0px 2px 12px 0 mix($theme-color-main-dark, #101010, 12%);
    margin-bottom: 16px;
    :last-child
      margin-bottom: 0

    .archive-post-content
      @extend .post .post-content
    .archive-post-info
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      padding: 16px
      z-index: 1
      overflow: hidden
      +flex-wrapper(column)
        align-items: initial
        justify-content: flex-end
      &:before
        content: ''
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        z-index -1
        +theme_light()
          background: linear-gradient(transparent 8%, #fff 84%)
        +theme_dark()
          background: linear-gradient(transparent 8%, #101010 84%)
      a
        text-decoration: none
      .archive-post-time
        font-size: 14px
        +theme_light()
          color: $theme-text-color-sub
        +theme_dark()
          color: $theme-text-color-sub-dark
      .archive-post-link
        +theme_light()
          color: $theme-color-main
        +theme_dark()
          color: $theme-color-main-dark
        font-size: 22px
        margin: 0
        margin-top: yard
        &:hover
          +theme_light()
            color: $theme-color-hover
          +theme_dark()
            color: $theme-color-hover-dark
